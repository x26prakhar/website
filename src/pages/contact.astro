---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact - Prakhar Singh" description="Get in touch with Prakhar Singh.">
    <section class="contact-section">
        <div class="container">
            <h1 class="section-title">Get in Touch</h1>
            <div class="contact-list">
                <div class="contact-item">
                    <span class="contact-label">Email</span>
                    <a href="mailto:hello@prakharsingh.com" class="contact-link">hello@prakharsingh.com</a>
                </div>
                <div class="contact-item">
                    <span class="contact-label">LinkedIn</span>
                    <a href="https://linkedin.com/in/prakharsingh" class="contact-link" target="_blank" rel="noopener">linkedin.com/in/prakharsingh</a>
                </div>
                <div class="contact-item">
                    <span class="contact-label">Twitter</span>
                    <a href="https://twitter.com/prakharsingh" class="contact-link" target="_blank" rel="noopener">@prakharsingh</a>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
