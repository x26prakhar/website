---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Storyteller with 9 years of experience. Writing about startups, AI, marketing, and consumer trends in India." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:type" content="website">
    <meta name="twitter:card" content="summary_large_image">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/writing">Writing</a></li>
            <li><a href="/wall-of-love">Wall of Love</a></li>
            <li><a href="/contact">Contact</a></li>
        </ul>
    </nav>

    <slot />

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2026 Prakhar Singh. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
